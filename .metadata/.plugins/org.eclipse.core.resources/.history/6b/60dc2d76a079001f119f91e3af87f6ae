import java.util.Scanner;

public class DuckNumber {

    // Function to check if the number is a Duck number
    static boolean isDuckNumber(int number) {
        // Eliminate numbers starting with 0 (not valid duck numbers)
        if (number == 0) {
            return false; // 0 is not a Duck number
        }
        
        // Check if the first digit is zero
        while (number > 0) {
            if (number % 10 == 0) {
                // If we find a zero after the first non-zero digit
                return true;
            }
            number /= 10; // Remove the last digit
        }
        
        return false;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input: Enter a positive number
        System.out.print("Enter a number: ");
        int number = sc.nextInt();

        // Checking if the input number is a Duck number
        if (number > 0 && isDuckNumber(number)) {
            System.out.println(number + " is a Duck number.");
        } else {
            System.out.println(number + " is not a Duck number.");
        }

        sc.close();
    }
}

